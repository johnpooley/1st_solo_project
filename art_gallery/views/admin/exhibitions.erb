<h1>Exhibitions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Info</th>
    <th>Active?</th>
    <th>Update Information</th>
  </tr>
  <% for exhibition in @exhibitions %>
  <tr>
    <td><a href="/admin/exhibitions/<%=exhibition.id%>"><%=exhibition.name%></a></td>
    <td><%=exhibition.info %></td>
    <td><%=exhibition.active%></td>
    <td><a href="/admin/exhibitions/<%=exhibition.id%>/edit">edit information</a></td>

  </tr>
  <% end %>
</table>
