<h1>Edit <%= @artwork.title %></h1>
<form method="POST" action="/admin/artworks/<%= @artwork.id %>/edited">
  <div class="form-wrapper">

    <div class="listy">
      <label for="title"> Name:</label>
      <input type="text" name="title" id="title" value="<%= @artwork.title %>"/>
    </div>



    <div class="listy">
      <label for="description">Description:</label>
      <input type="text" name="description" id="description" size="90" value="<%= @artwork.description %>"/>
    </div>

    <div class="listy">
      <label for="date">Date:</label>
      <input type="number" name="date" id="date" value="<%= @artwork.date %>"/>
    </div>

    <div class="listy">
      <label for="image">Image:</label>
      <input type="text" name="image" id="image" value="<%= @artwork.image %>"/>
    </div>

    <div class="listy">
      <label for="artist_select">Select Artist:</label>
      <select name="artist_id" id="artist_select" selected="<%= @artwork.artist %>">
        <% @artists.each do |artist| %>
          <% if artist.id == @artwork.artist.id %>
            <option selected="selected" value=<%= artist.id %> ><%= artist.name %></option>
          <% else %>
            <option value=<%= artist.id %>><%= artist.name %></option>
          <% end %>
        <% end %>
      </select>
    </div>
    <div class="listy">
      <label for="exhibition_select">Select Exhibition:</label>
      <select name="exhibition_id" id="exhibition_select" selected="<%= @artwork.exhibition%>">
        <% @exhibitions.each do |exhibition| %>

          <% if exhibition.id == @artwork.exhibition %>
            <option value=<%= exhibition.id %> selected="selected" ><%= exhibition.name %></option>
          <% else %>
            <option value=<%= exhibition.id %>><%= exhibition.name %></option>
          <% end %>
        <% end %>
      </select>
    </div>



    </div>

<br><br>

    <div class="listy">
      <input type="submit" value="Update Artwork"/>
    </div>

</form>
